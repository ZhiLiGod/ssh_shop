<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC
  		"-//Apache Struts//XWork Validator 1.0.3//EN"
  		"http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
	<!-- 校验用户名 -->
	<field name="username">
		<field-validator type="requiredstring">
			<message>Username is empty</message>
		</field-validator>
	</field>
	
	<field name="password">
		<field-validator type="requiredstring">
			<message>Password is empty</message>
		</field-validator>
	</field>
	<!-- 校验用户名 -->
	<field name="name">
		<field-validator type="requiredstring">
			<message>Name is empty</message>
		</field-validator>
	</field>	
	<!-- 校验用户名 -->
	<field name="addr">
		<field-validator type="requiredstring">
			<message>Address is empty</message>
		</field-validator>
	</field>	
	<field name="email">
		<field-validator type="email">
			<message>Incorrect email</message>
		</field-validator>
	</field>
	
</validators>